            {% endif %}
            <td>
                {{ summary[i].cuentas }}
            </td>
        {% endfor %}
        <td>{{ sumcta }}</td>
    </tr>
    <tr>
        <td class="heavy">CONTACTOS</td>
        {% set sumcont = 0 %}
        {% for i in 1..dhoy %}
            {% set sumcont = sumcont +summary[i].contactos %}
            {% set zeros = '' %}
            {% if summary[i].contactos == 0 %}
