            {% endif %}
            <td class="light"{{ zeros }}>{{ summary[i].contactos }}</td>
        {% endfor %}
        <td>{{ sumcont }}</td>
    </tr>
    <tr>
        <td class="heavy">NO CONTACTOS</td>
        {% set sumnoc = 0 %}
        {% for i in 1..dhoy %}
            {% set sumnoc = sumnoc + summary[i].nocontactos %}
            {% set zeros = '' %}
            {% if summary[i].nocontactos == 0 %}
                {% set zeros = ' style="color:red;"' %}
            {% endif %}
            <td class="light"{{ zeros }}>{{ summary[i].nocontactos }}</td>
        {% endfor %}
        <td>{{ sumnoc }}</td>
    </tr>
    <tr>
        <td class="heavy">PROMESAS</td>
        {% set sumprom = 0 %}
        {% for i in 1..dhoy %}
            {% set sumprom = sumprom + summary[i].promesas %}
            {% set zeros = '' %}
            {% if summary[i].promesas == 0 %}
                {% set zeros = ' style="color:red;"' %}
            {% endif %}
            <td>
                {{ summary[i].promesas }} </td>
        {% endfor %}
        <td>{{ sumprom }}</td>
    </tr>
    </tbody>
</table>
<script src="{{ asset('js/app.js') }}"></script>
</body>
</html>

