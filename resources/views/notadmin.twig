<!DOCTYPE html>
<html>
    <head>
        <title>COBRA Nota Admin</title>
        <link href="https://code.jquery.com/ui/1.12.0/themes/redmond/jquery-ui.css" rel="stylesheet" type="text/css"/>
        <script src="https://code.jquery.com/jquery-1.12.4.min.js" type="text/javascript"></script>
        <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js" type="text/javascript"></script>
    </head>
    <body>
        <div id="notabox">
            <table class="ui-widget" id="notahead">
                <thead class='ui-widget-header'>
                    <tr>
                        <th>GESTOR</th>
                        <th>FECHA</th>
                        <th>HORA</th>
                        <th>CUENTA</th>
                        <th colspan=5>NOTA</th>
                        <th>BORRAR</th>
                    </tr>
                </thead>
                <tbody class="ui-widget-content">
                    {% for n in notas %}
                            <tr>
                                <td>{{ n.c_cvge }}</td>
                                <td>{{ n.fecha }}</td>
                                <td>{{ n.hora }}</td>
                                <td>{{ n.cuenta }}</td>
                                <td colspan=5>{{ n.nota | e }}</td>
                                <td>
                                    <form action="/notadmin" method="post" name="lista{{ n.auto }}">
                                    	{{ csrf_field() }}
                                        <input type="hidden" name="which" readonly="readonly" value="{{ n.auto }}" />
                                        <input type="submit" name="go" value="BORRAR">
                                    </form>
                                </td>

                            </tr>
{% endfor %}
                    </tbody>
                </table>
            </div>
        <form action="/addNotaAdmin" method="post" name="notas">
        	{{ csrf_field()) }}
            <label for='fecha'>Fecha</label>
            <input type="text" name="fecha" id="fecha" value="" size=15 /><br>
            <label for='hora'>Hora</label>
            <input type="text" name="hora" id="hora" value="" />
            <label for='min'>Min</label>
            <input type="text" name="min" id="min" value="" /><br>
            <label for='"nota"'>Nota</label>
            <textarea rows="2" cols="40" name="nota" id="nota"></textarea><br>
            <input type="hidden" name="C_CONT" readonly="readonly" value='{{ id_cuenta }}' /><br>
            <input type="submit" name="go" value="GUARDAR">
        </form>
        <form action="/notadmin" method="post" name="notas">
            <label for="target">Gestor:</label>
                    <select name="target" id="target">
                        <option value="todos" style="font-size:120%;">todos</option>
                        {% for g in gestores %}
                            <option value="{{ g }}" style="font-size:120%;">{{ g }}</option>
                        {% endfor %}
                    </select>
            <input type="submit" name="go" value="GUARDAR">
        </form>
       <script>
            $(function () {
                $('#hora').spinner({
                    min: 0,
                    max: 23
                });
                $('#min').spinner({
                    min: 0,
                    max: 55,
                    step: 5
                });
                $('#fecha').datepicker();
            });
        </script>
    </body>
</html>
