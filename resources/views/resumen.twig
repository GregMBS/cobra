            <li><a href="{{ url('/reports') }}">REPORTES</a></li>
        {% endif %}
        <li><a>{{ capt }}</a></li>
        <li><a href="{{ url('/trouble/create') }}">ERROR</a></li>
        {% include 'privacidad.twig' %}
    </ul>
    {% if errors %}
        <div>
            <ul>
                {% if errors.any %}
                    {% for error in errors.all %}
                        <li>{{ error }}</li>
                    {% endfor %}
                {% endif %}
            </ul>
        </div>
    {% endif %}
    <div id="GENERAL" class="container">
        <div class="row">
            <div class="col-md-4">
                {% include 'resfield.twig' with {'field': 'nombre_deudor', 'label': 'Deudor', 'value': r.nombre_deudor} %}
            </div>
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <label for="domicilio_deudor">Domicilio</label> <textarea
                        id="domicilio_deudor" readonly='readonly' rows=4 cols=20>{{ r.domicilio_deudor|trim ~ "\n"
                    ~ r.colonia_deudor|trim ~ "\n"
                    ~ r.ciudad_deudor|trim ~ "," ~ r.estado_deudor|trim ~ ' ' ~ r.cp_deudor|trim }}
                    {% if r.domicilio_deudor_2 is not empty %}
                        {{ "\n o \n" ~ r.domicilio_deudor_2|trim }}
                    {% endif %}
                    </textarea><br>
                {% if r.direccion_nueva is not empty %}
                    {% include 'resfield.twig' with {'field': 'direccion_nueva', 'label': 'Dirección nueva', 'value': r.direccion_nueva} %}
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                {% include 'resfield.twig' with {'field': 'ejecutivo_asignado_call_center', 'label': 'Gestor Asignado', 'value': r.ejecutivo_asignado_call_center} %}
                {% include 'resfield.twig' with {'field': 'numero_de_cuenta', 'label': 'Numero de cuenta', 'value': r.numero_de_cuenta} %}
                {% include 'resfield.twig' with {'field': 'status_aarsa', 'label': 'Status de la Cuenta', 'value': r.status_aarsa} %}
            </div>
            <div class="col-md-4" id="fotobox">
                <img width="100" height="auto" src="/images/{{ r.id_cuenta }}.jpg" id="foto" alt="no foto"/>
            </div>
            <div class="col-md-4" id='clock'>
                <input type="hidden" id="timer" readonly="readonly" value="0">
                <input type="text" id="timerm" readonly="readonly" value="0" size="3">&nbsp;:&nbsp;
                <input type="text" id="timers" readonly="readonly" value="0" size="3"><br>
                {% set ngclass = 'low' %}
                {% if numgest > 20 %}
                    {% set ngclass = 'med' %}
                {% endif %}
                {% if numgest > 40 %}
                    {% set ngclass = 'high' %}
                {% endif %}
                <input type="text" id="numgest" class="{{ ngclass }}" readonly="readonly"
                       value="{{ numgest ~ ' gestiones' }}">
            </div>
        </div>
    </div>
    <div class="modal" tabindex="-1" role="dialog" id="searchbox">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Buscar</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
