<body id="todos">
<div id="buttonbox">
    {% if from in ['ultima','find'] %}
        <form class="buttons" name="seg" method="get" action="/resumen"
              id="segid">
            <input type="hidden" name="find" value="{{ r.id_cuenta }}"> <input
                    type="hidden" name="id_cuenta" value="{{ r.id_cuenta }}"> <input
                    type="submit" name="go" value="REINTRO QUEUE">
        </form>
