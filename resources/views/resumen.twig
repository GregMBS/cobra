<html>
<head>
    <title>Resumen</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="csrf-token" content="{{ csrf_token() }}">
    <link href="{{ asset('css/app.css') }}" rel="stylesheet">
    <link rel="stylesheet" type="text/css"
          href="https://cdn.datatables.net/1.10.12/css/dataTables.jqueryui.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.5.1/dropzone.css" />
    <style>
        #TELEFONOS label { display: block }
        #REFERENCIAS label { display: block }
        #LABORAL label { display: block }
        #CONTABLES label { display: block }
        #MISCELANEA label { display: block }
        h4 { font-weight: bold; background-color: yellow }
        #VISITA h4 { font-size: smaller }
        {% if foto_exists %}
        {% set fotoUrl =  '../images/' ~ r.id_cuenta ~ '.jpg'%}
        .dropzone {
            background: transparent url('{{ fotoUrl }}');
            background-size: 240px;
            height: 240px;
            width: 240px;
        }
        {% endif %}
    </style>
</head>
<body id="todos">
<div id="app">
    <ul id="buttonbox" class="nav nav-pills">
        {% if from in ['latest','find'] %}
            <li><a href="{{ url('/resumen',r.id_cuenta) }}">REINTRO QUEUE</a></li>
        {% endif %}
        <li><a href="{{ url('/latest') }}">ULTIMA</a></li>
        <li><a type="button" data-toggle="modal" data-target="#searchbox">BUSCAR</a></li>
        <li><a href="{{ url('/migo') }}">CUENTAS</a></li>
        <li><a href="{{ url('/visits',r.id_cuenta) }}" target="_blank">VISITAS</a></li>
        <li><a href="{{ url('/rotas') }}">PROMESAS</a></li>
        <li><a href="{{ url('/pagos',r.id_cuenta) }}" target="_blank">PAGOS</a></li>
        <li><a href="{{ url('/notas',r.id_cuenta) }}" target="_blank">NOTAS</a></li>
        <li><a href="{{ url('/queuesg') }}">QUEUES</a></li>
        <li><a href="{{ url('/logout') }}">LOGOUT</a></li>
        <li><a>{{ r.cliente ~ '-' ~ sdc ~ '-' ~ cr }}</a></li>
        {% if tipo == 'admin' %}
            <li><a href="{{ url('/reports') }}">REPORTES</a></li>
        {% endif %}
        <li><a>{{ capt }}</a></li>
        <li><a href="{{ url('/trouble/create') }}">ERROR</a></li>
        {% include 'privacidad.twig' %}
    </ul>
    {% if errors %}
        <div>
            <ul>
                {% if errors.any %}
                    {% for error in errors.all %}
                        <li>{{ error }}</li>
                    {% endfor %}
                {% endif %}
            </ul>
        </div>
    {% endif %}
    <div id="GENERAL" class="container">
        <div class="row">
            <div class="col-md-4">
                {% include 'resfield.twig' with {'field': 'nombre_deudor', 'label': 'Deudor', 'value': r.nombre_deudor} %}
            </div>
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <label for="domicilio_deudor">Domicilio</label> <textarea
                        id="domicilio_deudor" readonly='readonly' rows=4 cols=40>{{ r.domicilio_deudor|trim ~ "\n"
                    ~ r.colonia_deudor|trim ~ "\n"
                    ~ r.ciudad_deudor|trim ~ "," ~ r.estado_deudor|trim ~ ' ' ~ r.cp_deudor|trim }}
                    {% if r.domicilio_deudor_2 is not empty %}
                        {{ "\n o \n" ~ r.domicilio_deudor_2|trim }}
                    {% endif %}
                    </textarea><br>
                {% if r.direccion_nueva is not empty %}
                    {% include 'resfield.twig' with {'field': 'direccion_nueva', 'label': 'Dirección nueva', 'value': r.direccion_nueva} %}
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                {% include 'resfield.twig' with {'field': 'ejecutivo_asignado_call_center', 'label': 'Gestor Asignado', 'value': r.ejecutivo_asignado_call_center} %}
                {% include 'resfield.twig' with {'field': 'numero_de_cuenta', 'label': 'Numero de cuenta', 'value': r.numero_de_cuenta} %}
                {% include 'resfield.twig' with {'field': 'status_aarsa', 'label': 'Status de la Cuenta', 'value': r.status_aarsa} %}
            </div>
            <div class="col-md-4" id="fotobox">
                <form action="{{ url('/imageUpload') }}" class="dropzone" id="my-awesome-dropzone">
                    {{ csrf_field() }}
                    <input type="hidden" name="id_cuenta" value="{{ r.id_cuenta }}">
                </form>
            </div>
            <div class="col-md-4" id='clock'>
                <input type="hidden" id="timer" readonly="readonly" value="0">
                <label for="timerm">Tiempo: </label>
                <input type="text" id="timerm" readonly="readonly" value="0" size="3">
                <label for="timers">&nbsp;:&nbsp;</label>
                <input type="text" id="timers" readonly="readonly" value="0" size="3"><br>
                {% set ngclass = 'low' %}
                {% if numgest > 20 %}
                    {% set ngclass = 'med' %}
                {% endif %}
                {% if numgest > 40 %}
                    {% set ngclass = 'high' %}
                {% endif %}
                <label for="numgest">Gestiones: </label>
                <input type="text" id="numgest" class="{{ ngclass }}" readonly="readonly"
                       value="{{ numgest }}">
            </div>
        </div>
    </div>
    <div class="modal" tabindex="-1" role="dialog" id="searchbox">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Buscar</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form name="search" method="get" action="{{ url('/buscar') }}" id="search">
                        <label for="find">Buscar a: </label>
                        <input type="text" name="find" id="find">
                        <label for="field"> en </label>
                        <select name="field" id="field">
                            <option value="numero_de_cuenta">Cuenta</option>
                            <option value="numero_de_credito"># del Grupo</option>
                            <option value="nombre_deudor">Nombre</option>
                            <option value="domicilio_deudor">Dirección</option>
                            <option value="TELS">Telefonos</option>
                            <option value="REFS">Aval/Referencias</option>
                            <option value="id_cuenta">Expediente</option>
                        </select>
                        <br>
                        <label for="cliente">Client: </label>
                        <select name="cliente" id="cliente">
                            <option value="">Todos</option>
                            {% for cl in resultcl %}
                                <option value="{{ cl }}">{{ cl }}</option>
                            {% endfor %}
                        </select><br>
                        <input type="submit" class="btn btn-primary" value="BUSCAR">
                    </form>
                </div>
            </div>
        </div>
    </div>
