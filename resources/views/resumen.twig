    <form class="buttons" name="ultima" method="get" action="/resumen"
          id="ultima">
        <input type="submit" name="go" value="ULTIMA">
    </form>
    <form class="buttons" name="buscar" action="/resumen" id="/buscar">
        <button type="button" value="buscar" onclick="showsearch();">
            BUSCAR
        </button>
    </form>
    <form class="buttons" name="migo" method="get" action="/migo" id="migo">
        <input type="submit" name="go" value="CUENTAS">
    </form>
    <form class="buttons" name="visitlist" method="get"
          action="/visits/{{ r.id_cuenta }}" id="visitlist" target="_blank">
        <input type="submit" name="go" value="VISITAS">
    </form>
    <form class="buttons" name="rotas" method="get" action="/rotas"
          id="rotas">
        <input type="submit" name="go" value="PROMESAS">
    </form>
    <form class="buttons" name="pagos" method="get" action="/pagos/{{ r.id_cuenta }}"
          id="pagos" target="_blank">
        <input type="submit" name="go" value="PAGOS">
    </form>
    <form class="buttons" name="notasq" method="get" action="/notas/{{ r.id_cuenta }}"
          id="notas" target="_blank">
        <input type="submit" name="go" value="NOTAS">
    </form>
    <form class="buttons" name="queuesg" method="get" action="/queuesg"
          id="queuesg">
        <input type="submit" name="go" value="QUEUES">
    </form>
    <form class="buttons" name="logout" method="get" action="/logout"
          id="logout">
        <input type="submit" name="go" value="LOGOUT">
    </form>
    <button>
        {{ r.cliente ~ '-' ~ sdc ~ '-' ~ cr }}
    </BUTTON>
    {% if tipo == 'admin' %}
        <form action="/reports" method="get">
            <input type="submit" value="REPORTES">
        </form>
    {% endif %}
    <span style='font-weight: bold; font-size: 120%;'> {{ capt }}
            </span>
    <form class="buttons" name="trouble" method="get" action="/trouble/create"
          id="trouble">
        <input type="submit" name="go" value="ERROR">
    </form>
    {% include 'privacidad.twig' %}
    <img width="100" height="auto" src="/images/{{ id_cuenta }}" alt="no foto" />
</div>
<div id="GENERAL">
    <table>
        <tr>
            <td>{% include 'resfield.twig' with {'field': 'nombre_deudor', 'label': 'Deudor', 'value': r.nombre_deudor} %}
            </td>
            <td><label for="domicilio_deudor">Domicilio</label> <textarea
                        id=domicilio_deudor readonly='readonly' rows=4 cols=20>{{ r.domicilio_deudor|trim ~ "\n"
                    ~ r.colonia_deudor|trim ~ "\n"
                    ~ r.ciudad_deudor|trim ~ "," ~ r.estado_deudor|trim ~ ' ' ~ r.cp_deudor|trim }}
                    {% if r.domicilio_deudor_2 is not empty %}
                        {{ "\n o \n" ~ r.domicilio_deudor_2|trim }}
                    {% endif %}
                        </textarea><br>
                {% if r.direccion_nueva is not empty %}
                    {% include 'resfield.twig' with {'field': 'direccion_nueva', 'label': 'Dirección nueva', 'value': r.direccion_nueva} %}
                {% endif %}
            </td>
        </tr>
        <tr>
            <td>{% include 'resfield.twig' with {'field': 'ejecutivo_asignado_call_center', 'label': 'Gestor Asignado', 'value': r.ejecutivo_asignado_call_center} %}
                {% include 'resfield.twig' with {'field': 'numero_de_cuenta', 'label': 'Numero de cuenta', 'value': r.numero_de_cuenta} %}
                {% include 'resfield.twig' with {'field': 'status_aarsa', 'label': 'Status de la Cuenta', 'value': r.status_aarsa} %}
            </td>
            <td>
                <div id='clock'>
                    <input type="hidden" id="timer" readonly="readonly" value="0">
                    <input type="text" id="timerm" readonly="readonly" value="0"
                           size="3"> : <input type="text" id="timers"
                                              readonly="readonly" value="0" size="3"><br>
                    {% set ngclass = 'low' %}
                    {% if numgest > 20 %}
                        {% set ngclass = 'med' %}
                    {% endif %}
                    {% if numgest > 40 %}
                        {% set ngclass = 'high' %}
                    {% endif %}
                    <input type="text" id="numgest" class="{{ ngclass }}"
                           readonly="readonly" value="{{ numgest ~ ' gestiones' }}">
                </div>
            </td>
        </tr>
    </table>
</div>
<div id="searchbox">
