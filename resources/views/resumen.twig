                {% include 'rescell.twig' with {'field': 'pagos_vencidos', 'label': 'Meses vencidos', 'value': r.pagos_vencidos|number_format} %}
                {% include 'rescell.twig' with {'field': 'dias_vencidos', 'label': 'Días vencidos', 'value': r.dias_vencidos|number_format} %}
