        <select name="cliente">
            <option value="">Todos</option>
            {% for cl in resultcl %}
                <option value="{{ cl }}">{{ cl }}</option>
            {% endfor %}
        </select>
        <br> <input type="submit" value="BUSCAR"> <input
                type="button" name="cancel" onclick="cancelbox('searchbox')"
                value="Cancel">
