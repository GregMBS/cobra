<!DOCTYPE html>
<html>
    <head>
        <title>Listado por Gestor y Status</title>
        <meta name="csrf-token" content="{{ csrf_token() }}">
        <link href="{{ asset('css/app.css') }}" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.12/css/dataTables.jqueryui.min.css">
        <style type="text/css">
            tr:hover {background-color: #ff0000;}
        </style>
    </head>
    <body>
    <button onclick="window.location = 'queuesqc'">Regresar al Reporte de Queues</button>
    <br>
    <button onclick="window.location = '/reports'">Regresar al Admin</button>
    <br>
        <table id="cuentas" class="ui-widget">
            <thead class="ui-widget-header">
                <tr>
                    <th>ID</th>
                    <th>NOMBRE</th>
                    <th>CLIENTE</th>
                    <th>SEGMENTO</th>
                    <th>MONTO PAGO</th>
                    <th>SALDO TOTAL</th>
                    <th>QUEUE</th>
                    <th>GESTOR</th>
                    <th>ULT. GESTI&Oacute;N</th>
                </tr>
            </thead>
            <tbody class="ui-widget-content">
                {% for r in result %}
                    <tr>
                        <td><a href='resumen/{{ r.idc }}'>{{ r.numero_de_cuenta }}</a></td>
                        <td>{{ r.nombre_deudor }}</td>
                        <td>{{ r.cli }}</td>
                        <td>{{ r.status_de_credito }}</td>
                        <td class='num'>{{ r.sm|number_format(2, '.', ',') }}</td>
                        <td class='num'>{{ r.saldo_total|number_format(2, '.', ',') }}</td>
                        <td>{{ r.status_aarsa }}</td>
                        <td>{{ r.ejecutivo_asignado_call_center }}</td>
                        <td>{{ r.fecha_ultima_gestion }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    <script src="{{ asset('js/app.js') }}"></script>
    <script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js" type="text/javascript"></script>
        <script>
            $('#cuentas').DataTable();
        </script>
    </body>
</html>
